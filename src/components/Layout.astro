---
import Header from './Header.astro';
import Footer from './Footer.astro';

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>

		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	</head>
	<body>
		<main>
			<Header />
			<div class="content">
				<slot />
				<Footer />
			</div>
		</main>
		<script defer src="/_vercel/insights/script.js"></script>
	</body>
</html>

<style lang="scss">
	main {
		box-sizing: content-box;
		display: flex;
		align-items: flex-start;
		gap: 5rem;
		padding: 11vw;

		@media screen and (max-width: 1200px) {
			display: grid;
			padding: 12vw 10vw;
			gap: 2rem;
		}

		.content {
			max-width: 60ch;
		}
	}
	@font-face {
		font-family: 'Exo';
		font-style: italic;
		font-weight: 900;
		font-display: swap;
		src: url('Exo-Black.ttf') format('ttf');
	}
	@font-face {
		font-family: 'Inter';
		font-style: normal;
		font-weight: 400;
		font-display: swap;
		src: url('Inter-Regular.ttf') format('ttf');
	}
	@font-face {
		font-family: 'Inter';
		font-style: normal;
		font-weight: 700;
		font-display: swap;
		src: url('Inter-Black.ttf') format('ttf');
	}
</style>
