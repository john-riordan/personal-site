---
import ShareIcon from './SVGs/ShareIcon.astro';
const { url, title, description } = Astro.props;
---

<li class="project">
	<h4 class="list-item-title title"><a href={url}>{title} <ShareIcon /></a></h4>
	<div class="content">
		<p class="description" set:html={description}></p>
	</div>
</li>

<style lang="scss">
	.project {
		--padd: 1.5rem;
		display: flex;
		flex-direction: column;
		gap: 0.25rem;

		@media screen and (max-width: 768px) {
			--padd: 1rem;
		}
	}
	.content {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		padding-left: var(--padd);
	}
	.title {
		font-size: 1.5rem;

		@media screen and (max-width: 768px) {
			font-size: 1.25rem;
		}

		a {
			display: flex;
			align-items: center;
			gap: 0.75ch;
			text-decoration: none;
		}

		:global(svg) {
			fill: var(--accent);
			font-size: 1rem;
			transform: translateY(-0.125rem);
		}
	}
	.description {
		color: var(--c4);
	}
	.tags {
		display: flex;
		gap: 1.5rem;
		list-style: none;
		margin: 0;
		padding: 0;
		font-size: 0.875rem;
		color: var(--c5);

		@media screen and (max-width: 768px) {
			flex-wrap: wrap;
			row-gap: 0.5rem;
		}

		.tag {
			display: flex;
			align-items: center;
			gap: 0.5rem;

			&::before {
				content: '';
				height: 0.5rem;
				width: 0.25rem;
				background: var(--c8);
			}
		}
	}
</style>
